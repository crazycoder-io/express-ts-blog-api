{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "rootDir": ".",
    "strict": true, 
    "noImplicitAny": true, 
    "esModuleInterop": true,  
    "moduleResolution": "node", 
    "sourceMap": true,
    "outDir": "dist", 
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "typeRoots" : ["./node_modules/@types", "./src/@types"],
    "paths": {
      "*": [
          "./node_modules/*",
          "./src/*"            
      ],
      "@controller/*": ["src/controllers/*"],
      "@config/*": ["src/config/*"],
      
    } 
  },
  "include": [ "src", "src/**/*.ts" ],
  "exclude": [ "src/public", "node_modules" ]
}
