{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true, 
    "noImplicitAny": true, 
    "esModuleInterop": true,  
    "moduleResolution": "node", 
    "sourceMap": true,
    "outDir": "dist", 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": [
          "./node_modules/*",
          "./src/types"            
      ]
  } 
  },
  "include": [ "src/**/*" ],
  "exclude": [ "src/public" ]
}
